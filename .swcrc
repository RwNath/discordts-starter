{
    "$schema": "https://swc.rs/schema.json",
    "test": "\\.(ts|js)$",
    "jsc": {
        "parser": {
            "syntax": "typescript",
            "dynamicImport": true
        },
        "baseUrl": "./",
        "paths": {
            "@/*": ["src/*"]
        },
        "target": "esnext"
    },
    "module": {
        "type": "commonjs",
        "strict": false,
        "strictMode": true
    },
    "minify": false,
    "exclude": ["node_modules", ".*\\.d\\.ts$"]
}